---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Timeline from "../components/Timeline.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projecs from "../components/Projects.astro";
import JobIcon from "../components/icons/JobIcon.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Github from "../components/icons/Github.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import Mail from "../components/icons/Mail.astro";
import ProjectsIcon from "../components/icons/ProjectsIcon.astro";
import profileCompress from "../components/Images/profileCompress.png";

// test
---

<Layout
  title="Web developer | Gustavo Muñiz"
  description="I'm a Web Developer with three years of experience in engineering project development"
>
  <main class="px-4 pt-10">
    <SectionContainer>
      <h1
        class="text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, I'm Gustavo <a
          href="https://www.linkedin.com/in/developer-gustavo-mu%C3%B1iz-barrios-86708b121/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        Welcome! I'm a <span class="font-bold text-[#EF8354]"
          >Web Developer</span
        > with three years of experience in engineering project development. Feel
        free to explore my projects to see my skills as a web developer.
      </h2>
      <nav class="flex gap-4 mt-5 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/developer-gustavo">
          <Linkedin class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/GustavoMunizBarrios/">
          <Github class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:j.gustavomb1984@hotmail.com">
          <Mail class="size-4 md:size-6" />
          Email
        </SocialPill>
      </nav>
    </SectionContainer>
    <!-- ---------------- -->
    <!-- Projects Section -->
    <!-- ---------------- -->
    <SectionContainer id="projects">
      <h2
        class="text-3xl font-semibold text-gray-900 mb-7 flex gap-x-3 items-center"
      >
        <ProjectsIcon class="size-8" />
        Projects
      </h2>
      <Projecs />
    </SectionContainer>
    <!-- ----------------------------- -->
    <!-- Experience Section - Timeline -->
    <!-- ----------------------------- -->
    <SectionContainer id="experience">
      <h2
        class="text-3xl font-semibold text-gray-900 mb-7 flex gap-x-3 items-center"
      >
        <JobIcon class="size-8" />
        Work Experience
      </h2>

      <Timeline />
    </SectionContainer>
    <!-- ----------------------------- -->
    <!-- ------ About Me section ----- -->
    <!-- ----------------------------- -->
    <SectionContainer id="about">
      <h2
        class="text-3xl font-semibold text-gray-900 mb-7 flex gap-x-3 items-center"
      >
        <JobIcon class="size-8" />
        About Me
      </h2>
      <div class="flex items-center">
        <img
          class="mr-5 rounded-full size-[10rem] z-50 transform transition-all duration-200 hover:scale-110"
          src={profileCompress.src}
          alt="profile of Gustavo"
        />
        <p class="text-gray-700 text-lg mt-5">
          Hi! I'm <span class="font-bold text-[#ef8354]">Gustavo Muñiz</span> I am
          a web developer and I have 3 years of experience in engineering project
          development, I have had the opportunity to work in different areas and
          develop skills in project management, programming and agile methodologies.
          <br />
          <br />
          I am focused on <span class="font-bold text-[#1e40af]">Front-end</span
          > development. I have experience doing multiple projects and have worked
          in a real development environment with a team of developers.
        </p>
      </div>
    </SectionContainer>
  </main>
</Layout>
